  雲流システム - ログ設定ファイル

  このファイルはSLF4J + Logbackを使用したログ設定を定義します
  プロファイル別にログレベルと出力先を制御します
-->
<configuration>
    <!-- Spring Boot標準設定の読み込み -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- プロファイル別プロパティ設定 -->
    <springProfile name="dev">
        <property name="LOG_LEVEL" value="DEBUG"/>
        <property name="LOG_PATH" value="logs"/>
        <property name="LOG_FILE_MAX_SIZE" value="100MB"/>
        <property name="LOG_FILE_MAX_HISTORY" value="7"/>
        <property name="LOG_TOTAL_SIZE_CAP" value="1GB"/>
    </springProfile>

    <springProfile name="prod">
        <property name="LOG_LEVEL" value="INFO"/>
        <property name="LOG_PATH" value="${LOG_PATH:-/var/log/unryu}"/>
        <property name="LOG_FILE_MAX_SIZE" value="100MB"/>
        <property name="LOG_FILE_MAX_HISTORY" value="30"/>
        <property name="LOG_TOTAL_SIZE_CAP" value="5GB"/>
    </springProfile>

    <springProfile name="autotest">
        <property name="LOG_LEVEL" value="WARN"/>
        <property name="LOG_PATH" value="target/logs"/>
        <property name="LOG_FILE_MAX_SIZE" value="50MB"/>
        <property name="LOG_FILE_MAX_HISTORY" value="3"/>
        <property name="LOG_TOTAL_SIZE_CAP" value="500MB"/>
    </springProfile>

    <!-- 共通プロパティ -->
    <property name="CONSOLE_LOG_PATTERN" 
              value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <property name="FILE_LOG_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%t] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <!-- コンソール出力設定 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 開発環境以外ではERRORレベル以上のみコンソール出力 -->
        <springProfile name="!dev">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>ERROR</level>
            </filter>
        </springProfile>
    </appender>

    <!-- ファイル出力設定 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/unryu-system.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/unryu-system.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>${LOG_FILE_MAX_SIZE}</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>${LOG_FILE_MAX_HISTORY}</maxHistory>
            <totalSizeCap>${LOG_TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- エラーログ専用 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/unryu-system-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/unryu-system-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- セキュリティログ専用 -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/unryu-system-security.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/unryu-system-security.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- アプリケーションログ -->
    <logger name="jp.co.apsa.unryu" level="${LOG_LEVEL}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <springProfile name="!autotest">
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </springProfile>
    </logger>

    <!-- セキュリティログ -->
    <logger name="jp.co.apsa.unryu.security" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <springProfile name="!autotest">
            <appender-ref ref="SECURITY_FILE"/>
        </springProfile>
    </logger>

    <!-- Spring Frameworkログ -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="DEBUG"/>
    <logger name="org.springframework.security" level="DEBUG"/>
    <logger name="org.springframework.transaction" level="DEBUG"/>

    <!-- Hibernateログ -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- HikariCPログ -->
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- 外部ライブラリログ -->
    <logger name="org.apache" level="WARN"/>
    <logger name="com.fasterxml.jackson" level="WARN"/>

    <!-- ルートログ -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <springProfile name="!autotest">
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </springProfile>
    </root>
</configuration>
